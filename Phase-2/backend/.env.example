# Phase-2 Backend Environment Variables
# Copy this file to `.env` and fill in real values.

# PostgreSQL connection string (Neon or local Postgres)
DATABASE_URL=postgresql://user:password@host:5432/todo_db

# Shared secret used to verify JWTs (must match Better Auth issuer configuration)
BETTER_AUTH_SECRET=change-me

# Enable/disable debug behavior
DEBUG=true
